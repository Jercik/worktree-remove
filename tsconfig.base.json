{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* Erasable Syntax Only (TypeScript 5.8+): keeps the emitted dist/ free of type-only markers while speeding up incremental rebuilds */
    "erasableSyntaxOnly": true,

    /* Node ESM Module Resolution */
    "module": "NodeNext",

    "baseUrl": "."
  }
}
